<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/pd_10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_feed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pd_5"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pd_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/news_feed_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pd_5"
                    android:textSize="14sp"
                    android:text="@string/lorem_ipsum" />

                <TextView
                    android:id="@+id/news_feed_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pd_5"
                    android:text="@string/link" />

                <TextView
                    android:id="@+id/news_feed_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="2019-01-01" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>



