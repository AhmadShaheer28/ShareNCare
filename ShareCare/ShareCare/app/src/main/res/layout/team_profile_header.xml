<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/profile_header_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/pd_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/team_view_profile_logo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="top"
                android:padding="@dimen/mg_10"
                android:src="@drawable/team_badge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/pd_5"
                android:foregroundGravity="center_vertical"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/team_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/team_name"
                    android:textAllCaps="true"

                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/team_view_profile_club"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="@string/club_name"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pd_5"
                    android:numStars="5"
                    android:progressTint="@color/white"
                    android:rating="5"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/team_xp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/profile_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/challenge_btn"
            android:gravity="center"
            android:paddingLeft="@dimen/mg_30"

            android:paddingRight="@dimen/mg_30"
            android:text="@string/challengenow"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>