<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_5"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/pd_10"
        android:weightSum="3">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/pd_5"
            android:layout_weight="0.3"
            android:src="@drawable/ic_shield_team" />

        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:orientation="vertical"
            android:padding="@dimen/pd_5"
            android:weightSum="3">

            <TextView
                android:id="@+id/chat_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="title"
                android:textColor="@color/gray"
                android:textSize="@dimen/h6" />

            <TextView
                android:id="@+id/last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingEnd="@dimen/pd_5"
                android:text="message"
                android:textSize="@dimen/h7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/chat_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="type"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/chat_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="yyyy-dd-mm"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>