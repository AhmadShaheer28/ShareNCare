<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/mg_10"
        android:weightSum="3">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="1.3"
            android:src="@drawable/ic_shield_team" />

        <TextView
            android:id="@+id/team_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:paddingLeft="@dimen/pd_5"
            android:text="P07"
            android:textColor="@color/black"
            android:textSize="@dimen/size_normal" />

        <TextView
            android:id="@+id/statusTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/pd_5"
            android:text="@string/league"
            android:textSize="@dimen/size_10" />


    </LinearLayout>

</LinearLayout>